{
  "name": "swig-ts",
  "version": "0.2.0-beta.2",
  "license": "AGPL-3.0-only",
  "sideEffects": true,
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build:packages && bun build:examples",
    "build:examples": "bun --filter 'secp-ui' build",
    "build:classic": "bun --filter '@swig-wallet/classic' build",
    "build:coder": "bun --filter '@swig-wallet/coder' build",
    "build:docs": "typedoc",
    "build:packages": "bun build:coder && bun build:classic",
    "changeset": "changeset",
    "dev": "bun --filter '*' dev",
    "dev:classic": "bun --filter '@swig-wallet/classic' dev",
    "dev:coder": "bun --filter '@swig-wallet/coder' dev",
    "format": "prettier --check packages/",
    "format:fix": "prettier --write packages/",
    "release": "bun run build && changeset publish"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@ethereumjs/wallet": "^2.0.4",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.0",
    "ethers": "^6.13.5",
    "ws": "^8.18.1"
  }
}
