{
  "name": "swig-ts",
  "version": "0.2.0-beta.2",
  "license": "AGPL-3.0-only",
  "sideEffects": true,
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build",
    "build:examples": "bun --filter 'secp-ui' build",
    "build:classic:watch": "nx build '@swig-wallet/classic' --watch",
    "build:classic": "nx build '@swig-wallet/classic'",
    "build:coder": "nx build '@swig-wallet/coder'",
    "build:kit": "nx build '@swig-wallet/kit'",
    "build:lib": "nx build '@swig-wallet/lib'",
    "build:docs": "typedoc",
    "build:packages": "nx run-many --target=build --projects='@swig-wallet/classic','@swig-wallet/coder','@swig-wallet/kit','@swig-wallet/lib'",
    "changeset": "changeset",
    "ci": "bun build:packages && bun lint && bun format && bun test",
    "dev": "bun --filter '*' dev",
    "dev:classic": "bun --filter '@swig-wallet/classic' dev",
    "dev:coder": "bun --filter '@swig-wallet/coder' dev",
    "format": "prettier --check packages/",
    "format:fix": "prettier --write packages/",
    "lint": "nx run-many --target=lint --projects='@swig-wallet/classic','@swig-wallet/coder','@swig-wallet/kit','@swig-wallet/lib'",
    "lint:fix": "nx run-many --target=lint:fix --projects='@swig-wallet/classic','@swig-wallet/coder','@swig-wallet/kit','@swig-wallet/lib'",
    "release": "bun run build && bun update:package-version && changeset publish",
    "test": "nx run-many --target=test --projects='@swig-wallet/classic','@swig-wallet/coder','@swig-wallet/kit','@swig-wallet/lib'",
    "typecheck": "nx run-many --target=typecheck --projects='@swig-wallet/classic','@swig-wallet/coder','@swig-wallet/kit','@swig-wallet/lib'",
    "update:package-version": "bun scripts/update-internal-pkg-version.ts",
    "update:program": "./scripts/update-program-latest.sh"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "examples/*/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.2.0",
    "nx": "21.1.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@ethereumjs/wallet": "^2.0.4",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.0",
    "ethers": "^6.13.5",
    "ws": "^8.18.1"
  }
}